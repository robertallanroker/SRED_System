          <field name="model">sred_system.work_resource_roles</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="work_resource_scope" string="Scope"/>
                  <field name="work_person" string="Person Assigned"/>
                  <field name="work_types" string="Role Type"/>
                  <field name="work_functions" string="Functions"/>
              </tree>
          </field>
      </record>

      <record model="ir.ui.view" id="sred_system.tree_of_sred_work">
        <field name="name">List Claims</field>
        <field name="model">sred_system.sred_project</field>
        <field name="arch" type="xml">
          <tree>
              <field name="sred_state" string="Status"/>
              <field name="name" string = "Claim Project Name"/>
              <field name="a_claim_project" string ="Project File"/>
              <field name="an_assigned_folder" string="Folder"/>
              <field name="Work_Commenced" string="Started on"/>
              <field name="CRA_Deadline" string="Deadline"/>
              <field name="sred_working_status" string="Work"/>
              <field name="sred_processing_status" string="Processing"/>
              <field name="sred_cra_status" string="CRA"/>
          </tree>
        </field>
      </record>

      <!-- JOURNAL ENTRIES WITHIN THE SRED CLAIM -->
